<script>
	function updatePeriodText() {
		let date = '<%= transactionDate %>';
		const period = '<%= data.period %>';
		date = new Date(date)
		let startDate, endDate;

		if (period === 'monthly') {
			// Calculate the previous month's start and end dates
			const firstDay = new Date(date.getFullYear(), date.getMonth() - 1, 1);
			const lastDay = new Date(date.getFullYear(), date.getMonth(), 0);
			startDate = firstDay.toLocaleDateString('en-US', { day: 'numeric', month: 'long', year: 'numeric' });
			endDate = lastDay.toLocaleDateString('en-US', { day: 'numeric', month: 'long', year: 'numeric' });
		} else if (period === 'quarterly') {
			// Calculate the previous quarter's start and end dates
			const quarterStartMonth = Math.floor((date.getMonth() - 3) / 3) * 3;
			const firstDay = new Date(date.getFullYear(), quarterStartMonth, 1);
			const lastDay = new Date(date.getFullYear(), quarterStartMonth + 3, 0);
			startDate = firstDay.toLocaleDateString('en-US', { day: 'numeric', month: 'long', year: 'numeric' });
			endDate = lastDay.toLocaleDateString('en-US', { day: 'numeric', month: 'long', year: 'numeric' });
		} else if (period === 'annually') {
			// Calculate the previous year's start and end dates
			const firstDay = new Date(date.getFullYear() - 1, 0, 1);
			const lastDay = new Date(date.getFullYear() - 1, 11, 31);
			startDate = firstDay.toLocaleDateString('en-US', { day: 'numeric', month: 'long', year: 'numeric' });
			endDate = lastDay.toLocaleDateString('en-US', { day: 'numeric', month: 'long', year: 'numeric' });
		}
		document.querySelectorAll('.periodDisplay').forEach(element => {
			element.textContent = ` ${startDate} - ${endDate}`;
		});
	}
	document.addEventListener("DOMContentLoaded", updatePeriodText);
</script>
